{
	"name": "Zoom",
	"version": "1.0",
	"description": "Control zoom size in different device",
	"permissions": [
		"tabs",
		"activeTab",
		"http://*/*",
		"https://*/*",
		"file:///*"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"16": "images/zoomX16.png",
			"32": "images/zoomX32.png",
			"48": "images/zoomX48.png",
			"64": "images/zoomX64.png"
		}
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"manifest_version": 2
}
